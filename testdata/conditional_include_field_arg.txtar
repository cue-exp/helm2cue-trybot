Include with field expression argument used inside a condition.

-- _helpers.tpl --
{{- define "myapp.name" -}}
{{ . }}
{{- end -}}
-- input.yaml --
{{- if include "myapp.name" .Values.name }}
label: present
{{- end }}
-- output.cue --
import "struct"

#values: {
	name?: bool | number | string | null
	...
}
_myapp_name: {
	#arg: _
	#arg
}

if (_nonzero & {#arg: _myapp_name & {#arg: #values.name, _}, _}) {
	label: "present"
}
_nonzero: {
	#arg?: _
	[if #arg != _|_ {
		[
			if (#arg & int) != _|_ {#arg != 0},
			if (#arg & string) != _|_ {#arg != ""},
			if (#arg & float) != _|_ {#arg != 0.0},
			if (#arg & bool) != _|_ {#arg},
			if (#arg & [...]) != _|_ {len(#arg) > 0},
			if (#arg & {...}) != _|_ {(#arg & struct.MaxFields(0)) == _|_},
			false,
		][0]
	}, false][0]
}
