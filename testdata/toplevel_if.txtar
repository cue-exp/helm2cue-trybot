Top-level if wrapping entire template.

-- values.yaml --
enabled: true
name: my-config
-- helm_output.yaml --
apiVersion: v1
kind: ConfigMap
metadata:
  name: my-config
data:
  key: value
-- input.yaml --
{{- if .Values.enabled }}
apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ .Values.name }}
data:
  key: value
{{- end }}
-- output.cue --
import "struct"

#values: {
	enabled?: bool | number | string | null
	name!:    bool | number | string | null
	...
}

if (_nonzero & {#arg: #values.enabled, _}) {
	apiVersion: "v1"
	kind:       "ConfigMap"
	metadata: name: #values.name
	data: key: "value"
}
_nonzero: {
	#arg?: _
	[if #arg != _|_ {
		[
			if (#arg & int) != _|_ {#arg != 0},
			if (#arg & string) != _|_ {#arg != ""},
			if (#arg & float) != _|_ {#arg != 0.0},
			if (#arg & bool) != _|_ {#arg},
			if (#arg & [...]) != _|_ {len(#arg) > 0},
			if (#arg & {...}) != _|_ {(#arg & struct.MaxFields(0)) == _|_},
			false,
		][0]
	}, false][0]
}
