If/else conditional.

-- input.yaml --
result:
  {{- if .input.debug }}
  mode: debug
  {{- else }}
  mode: release
  {{- end }}
-- values.yaml --
debug: false
-- output.cue --
import "struct"

#input: {
	debug?: bool | number | string | null
	...
}

result: {
	if (_nonzero & {#arg: #input.debug, _}) {
		mode: "debug"
	}
	if !(_nonzero & {#arg: #input.debug, _}) {
		mode: "release"
	}
}
_nonzero: {
	#arg?: _
	[if #arg != _|_ {
		[
			if (#arg & int) != _|_ {#arg != 0},
			if (#arg & string) != _|_ {#arg != ""},
			if (#arg & float) != _|_ {#arg != 0.0},
			if (#arg & bool) != _|_ {#arg},
			if (#arg & [...]) != _|_ {len(#arg) > 0},
			if (#arg & {...}) != _|_ {(#arg & struct.MaxFields(0)) == _|_},
			false,
		][0]
	}, false][0]
}
