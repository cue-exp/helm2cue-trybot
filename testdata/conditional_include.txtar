include used inside a condition (if/and/or).

-- _helpers.tpl --
{{- define "myapp.enabled" -}}
{{- if .Values.enabled -}}true{{- end -}}
{{- end -}}
-- values.yaml --
enabled: true
name: my-app
-- input.yaml --
apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ .Values.name }}
{{- if include "myapp.enabled" . }}
data:
  status: active
{{- end }}
-- helm_output.yaml --
apiVersion: v1
kind: ConfigMap
metadata:
  name: my-app
data:
  status: active
-- output.cue --
import "struct"

#values: {
	enabled?: bool | number | string | null
	name!:    bool | number | string | null
	...
}
_myapp_enabled: {
	if (_nonzero & {#arg: #values.enabled, _}) {
		true
	}
}

apiVersion: "v1"
kind:       "ConfigMap"
metadata: name: #values.name
if (_nonzero & {#arg: _myapp_enabled, _}) {
	data: status: "active"
}
_nonzero: {
	#arg?: _
	[if #arg != _|_ {
		[
			if (#arg & int) != _|_ {#arg != 0},
			if (#arg & string) != _|_ {#arg != ""},
			if (#arg & float) != _|_ {#arg != 0.0},
			if (#arg & bool) != _|_ {#arg},
			if (#arg & [...]) != _|_ {len(#arg) > 0},
			if (#arg & {...}) != _|_ {(#arg & struct.MaxFields(0)) == _|_},
			false,
		][0]
	}, false][0]
}
