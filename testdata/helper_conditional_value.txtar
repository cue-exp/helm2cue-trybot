Helper that conditionally returns a bare value (not fields) using if.
CUE's if is a field comprehension, not a value expression, so the helper
body must be wrapped in a struct literal. When the condition is false the
result is {} which _nonzero treats as zero.

-- _helpers.tpl --
{{- define "myapp.enabled" -}}
{{- if .Values.enabled -}}
true
{{- end -}}
{{- end -}}
-- input.yaml --
apiVersion: v1
kind: ConfigMap
metadata:
  name: test
{{- if include "myapp.enabled" . }}
data:
  enabled: "yes"
{{- end }}
-- values.yaml --
enabled: true
-- helm_output.yaml --
apiVersion: v1
kind: ConfigMap
metadata:
  name: test
data:
  enabled: "yes"
-- output.cue --
import "struct"

#values: {
	enabled?: bool | number | string | null
	...
}
_myapp_enabled: {
	if (_nonzero & {#arg: #values.enabled, _}) {
		true
	}
}

apiVersion: "v1"
kind:       "ConfigMap"
metadata: name: "test"
if (_nonzero & {#arg: _myapp_enabled, _}) {
	data: enabled: "yes"
}
_nonzero: {
	#arg?: _
	[if #arg != _|_ {
		[
			if (#arg & int) != _|_ {#arg != 0},
			if (#arg & string) != _|_ {#arg != ""},
			if (#arg & float) != _|_ {#arg != 0.0},
			if (#arg & bool) != _|_ {#arg},
			if (#arg & [...]) != _|_ {len(#arg) > 0},
			if (#arg & {...}) != _|_ {(#arg & struct.MaxFields(0)) == _|_},
			false,
		][0]
	}, false][0]
}
