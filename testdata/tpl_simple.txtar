tpl with a simple scalar value: evaluates a values-provided
template string at CUE evaluation time.

-- input.yaml --
data: {{ tpl .Values.greeting . }}
-- values.yaml --
greeting: hello
-- helm_output.yaml --
data: hello
-- output.cue --
import (
	"encoding/yaml"
	"text/template"
)

#capabilities: _
#chart:        _
#files:        _
#release:      _
#template:     _
#values: {
	greeting!: bool | number | string | null
	...
}

data: yaml.Unmarshal(template.Execute(#values.greeting, _tplContext))
_tplContext: {
	Capabilities: #capabilities
	Chart:        #chart
	Files:        #files
	Release:      #release
	Template:     #template
	Values:       #values
}
